<?xml version="1.0" encoding="utf-8"?>
<EditText xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/et_add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:hint="@string/hint_add_to_shopping_list"
    android:imeActionLabel="@string/ime_label_add"
    android:background="@null"
    android:paddingVertical="@dimen/margin_small"
    android:paddingHorizontal="@dimen/margin_medium"
    android:imeOptions="actionDone"
    tools:text="@tools:sample/lorem/random"
    android:importantForAutofill="no"
    android:inputType="textCapWords|textAutoComplete|textImeMultiLine"
    android:maxLength="@integer/max_product_name_length"
    tools:context=".ui.QuickAddFragment" />
